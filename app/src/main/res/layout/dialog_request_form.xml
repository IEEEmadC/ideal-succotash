<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.yashtrivedi.ideal_succotash.MainActivity"
    android:orientation="vertical">

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/going_nirma_text"
        android:id="@+id/to_from_check_box"/>

    <EditText
        android:id="@+id/edit_text_car_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Car Number"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords"
        android:textColor="#000"
        android:textColorHint="#bfbdb9" />
   <!-- <EditText
        android:id="@+id/edit_text_car_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Car Model"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords"
        android:textColor="#000"
        android:textColorHint="#bfbdb9" />
   -->
    <EditText
        android:id="@+id/edit_text_area"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:hint="Enter the going to Area"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords"
        android:textColor="#000"
        android:textColorHint="#bfbdb9" />


</LinearLayout>