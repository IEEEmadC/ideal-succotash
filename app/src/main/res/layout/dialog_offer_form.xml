<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.yashtrivedi.ideal_succotash.MainActivity">

    <CheckBox
        android:id="@+id/to_from_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/going_home_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Car No: " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_car_no1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="textCapCharacters"
            android:maxLength="2"
            android:minWidth="34dp"
            android:textColor="#000"
            android:textColorHint="#bfbdb9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edit_text_car_no2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="number"
            android:maxLength="2"
            android:minWidth="34dp"
            android:textColor="#000"
            android:textColorHint="#bfbdb9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/edit_text_car_no3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="textCapCharacters"
            android:maxLength="2"
            android:minWidth="34dp"
            android:textColor="#000"
            android:textColorHint="#bfbdb9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/edit_text_car_no4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="number"
            android:maxLength="4"
            android:minWidth="50dp"
            android:textColor="#000"
            android:textColorHint="#bfbdb9" />


    </LinearLayout>

    <!-- <EditText
         android:id="@+id/edit_text_car_model"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="Car Model"
         android:imeOptions="actionDone|flagNoExtractUi"
         android:inputType="textCapWords"
         android:textColor="#000"
         android:textColorHint="#bfbdb9" />
    -->
    <EditText
        android:id="@+id/edit_text_area"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/area"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords"
        android:textColor="#000"
        android:textColorHint="#bfbdb9" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/capacity" />

    <NumberPicker
        android:id="@+id/number_picker_car_capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>